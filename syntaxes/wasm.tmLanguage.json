{
	"scopeName": "source.wasm",
	"fileTypes": [
		"wat"
	],
	"foldingStartMarker": "\\(\\s*$",
	"foldingStopMarker": "^\\s*\\)",
	"name": "WebAssembly",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#string"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"comment": {
			"begin": ";;",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.wasm"
				}
			},
			"end": "$",
			"name": "comment.line.semicolon.wasm"
		},
		"string": {
			"name": "string.quoted.double.clojure",
			"begin": "(?<!\\\\)(\")",
			"beginCaptures": {
				"1": {
					"name": "punctuation.definition.string.begin.wasm"
				}
			},
			"end": "(\")",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.string.end.wasm"
				}
			},
			"patterns": [
				{
					"match": "\\\\.",
					"name": "constant.character.escape.wasm"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "(-?\\d+)",
					"name": "constant.numeric.int.wasm"
				}
			]
		},
	}
}